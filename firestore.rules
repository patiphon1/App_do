rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // เก็บ OTP/Token: ฝั่ง client ห้ามแตะตรง ๆ
    match /otp_requests/{email}/codes/{codeId} {
      allow read, write: if false;
    }
    match /password_reset_tokens/{token} {
      allow read, write: if false;
    }

    // โปรไฟล์ผู้ใช้ (ตัวอย่าง)
    match /users/{uid} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null && request.auth.uid == uid;
    }

    // ปิดอย่างอื่น
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
